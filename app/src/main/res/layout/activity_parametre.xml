<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".parametre"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="40dp">
    <ImageView
        android:id="@+id/returnn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/ic_menu_revert"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp">
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="65dp"
            android:layout_height="56dp"
            app:srcCompat="@drawable/guitar"

            />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Musique"
            android:textColor="#FF03DAC5"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:paddingRight="30dp"
            android:paddingLeft="22dp"
            />
        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="on/off"
            android:layout_gravity="center"
            />

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25dp">
    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="65dp"
        android:layout_height="56dp"
        app:srcCompat="@drawable/darkmode"
        />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dark Mode"
        android:textColor="#FF03DAC5"
        android:textSize="24sp"
        android:paddingRight="13dp"
        android:paddingLeft="20dp"
        android:layout_gravity="center"

        />
    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dark/light"
        android:layout_gravity="center"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp">
        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="65dp"
            android:layout_height="56dp"
            app:srcCompat="@drawable/contact"
            />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact us"
            android:textColor="#FF03DAC5"
            android:textSize="24sp"
            android:paddingLeft="20dp"
            android:layout_gravity="center"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp">
        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="65dp"
            android:layout_height="56dp"
            app:srcCompat="@drawable/apropos"
            />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A Propos "
            android:textColor="#FF03DAC5"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            />

    </LinearLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView10"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:text="c'est  une application educatif des élèves du 1er anneé primaire"
        android:textColor="#FF03DAC5"
        android:textSize="30sp"
        android:layout_marginBottom="50dp"
        android:padding="10dp"
        />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="76dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/exit"

        />

</LinearLayout>




</LinearLayout>